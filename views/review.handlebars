
      <div class="row">
        
        <div class="col s12 m3 pane">
          <img src="{{imageURL}}" alt="{{title}} image" style="width: 100%" class="z-depth-5"/><br><br>
          <h5>{{category}}</h5><br>
          <a href="{{blogLink}}" target="_blank">View on Sports Illustrated</a><br><br>
          <a href="/">NFL Scrape Home</a>
        </div>
        <div class="col s12 m9">
          <h3>{{title}}</h3>
          <h5>{{writer}}</h5>
          {{{reviewText}}}
          <div class="divider"></div>
            <h4>Comments</h4>
            <div class="comment-container">
                {{#each comments}}
                  <div class="card-panel red lighten-2">
                    <p class="white-text">{{comment}}</p>
                    <strong>Written By: {{name}}</strong>
                  </div>
                {{/each}}
            </div>
          <div class="divider"></div>
          <h5>Leave A Comment</h5>
            
           <form class="form-inline" data-id="{{blogLink}}">
            <div class="input-field">
              <input type="text" class="validate comment-name" name="name" placeholder="Your Name" />
              <label for="name">What is your name?</label>
            </div>
            <div class="input-field">
              <textarea class="validate materialize-textarea comment" name="comment" placeholder="Enter your comment here. Be nice!"> </textarea>
              <label for="comment">What is your comment?</label>
            </div>
            <button class="btn btn-floating waves-effect waves-light red lighten-2 submit" type="submit" name="action">
              <i class="material-icons right">send</i>
            </button>
          </form>


        </div>
      </div>

